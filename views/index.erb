<!-- views/index.erb -->
<html>
<head>
  <title>Recipe Ingredients Finder</title>

  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 0;
      background-color: #f4f4f4;
      color: #333;
    }

    h1 {
      background-color: #5A9;
      color: white;
      padding: 20px;
      text-align: center;
    }

    ul {
      padding: 20px;
      list-style-type: none;
    }

    li {
      background-color: white;
      border: 1px solid #ddd;
      padding: 10px;
      margin: 5px 0;
      border-radius: 5px;
      display: flex;
      justify-content: space-between;
    }

    li:nth-child(odd) {
      background-color: #f9f9f9;
    }

    .ingredient-name {
      font-weight: bold;
    }

    .ingredient-quantity {
      font-style: italic;
      color: #555;
    }
  </style>
</head>
<body>
  <h1>Get Recipe Ingredients</h1>
  <form action="/ask" method="POST">
    <label for="recipe_name">Enter Recipe Name:</label>
    <input type="text" name="recipe_name" id="recipe_name" required>
    <button type="submit">Get Ingredients</button>
  </form>

  <% if @error %>
    <p style="color: red;"><%= @error %></p>
  <% end %>

  <% if @ingredients %>
    <h3>Ingredients for <%= recipe_name %>:</h3>
    <ul>
      <% if @ingredients && @ingredients.any? %>
        <% @ingredients.each do |ingredient| %>
          <li><strong><%= ingredient[:quantity] %></strong> <%= ingredient[:name] %></li>
        <% end %>
      <% else %>
        <p>No ingredients found or the recipe name is invalid.</p>
      <% end %>
    </ul>
    <h3>Macros for <%= recipe_name %>:</h3>
    <ul>
      <% if @macros && @macros.any? %>
        <% @macros.each do |macro| %>
          <li><strong><%= macro[:quantity] %></strong> <%= macro[:name] %></li>
        <% end %>
      <% else %>
        <p>No macros found or the recipe name is invalid.</p>
      <% end %>
    </ul>
  <% end %>
</body>
</html>
